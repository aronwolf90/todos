<%= form_with(model: [@list, item], class: "contents", data: { "turbo-frame": "_top" }) do |form| %>
  <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
    <% if item.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

        <ul>
          <% item.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.label :name, class: "native:hidden" %>
    <%= form.text_field :name, autofocus: true, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <%= modal_footer do %>
    <%= form.submit class: "inline-flex w-full justify-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 sm:ml-3 sm:w-auto cursor-pointer", type: "submit" %>
    <%= modal_close_button %>
  <% end %>
<% end %>
