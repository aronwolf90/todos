<%= render "layouts/flash" %>

<% content_for :title, "New account" %>

<div class="mx-auto max-w-md mt-16">
  <h1 class="text-center text-blue-500 text-3xl font-bold mb-9">New account</h1>

  <%= form_with(model: @user, class: "contents", url: registration_url) do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mb-5">
      <%= form.label :email_address %>
      <%= form.email_field :email_address, class: "block shadow rounded border border-gray-400 outline-none px-3 py-2.5 mt-2 w-full", required: true, autocomplete: "username" %>
    </div>
  
    <div class="my-5">
      <%= form.label :password %>
      <%= form.password_field :password, class: "block shadow rounded border border-gray-400 outline-none px-3 py-2.5 mt-2 w-full", required: true, maxlength: 72, autocomplete: "new-password" %>
    </div>
  
    <div class="my-5">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: "block shadow rounded border border-gray-400 outline-none px-3 py-2.5 mt-2 w-full", required: true, autocomplete: "new-password", maxlength: 72 %>
    </div>
  
    <div class="my-5">
      <%= form.check_box :terms_confirmed, class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2 " %>
      <%= form.label :terms_confirmed do %>
        I agree to the <%= link_to "Terms of Service", terms_path, class: "text-blue-600 hover:underline" %> and <%= link_to "Privacy Policy", privacy_path, class: "text-blue-600 hover:underline" %>
      <% end %>
    </div>
  
    <%= form.submit "Create account", class: "rounded-lg py-3 px-5 bg-blue-600 text-white w-full font-medium cursor-pointer" %>
  <% end %>
</div>
