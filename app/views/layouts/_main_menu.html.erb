<div data-controller="dropdown" class="relative">
  <button id="main-menu" type="button" data-controller="overflow-menu" data-action="dropdown#toggle click@window->dropdown#hide" class="p-2 p-2 rounded-lg hover:bg-gray-200 dots-menu turbo-native-hidden">
    <%= icon "three-dots-vertical" %>
  </button>

  <div
    data-dropdown-target="menu"
    class="hidden absolute right-0 z-10 bg-neutral-50 divide-y divide-gray-100 rounded-lg shadow w-44"
    data-transition-enter-from="opacity-0 scale-95"
    data-transition-enter-to="opacity-100 scale-100"
    data-transition-leave-from="opacity-100 scale-100"
    data-transition-leave-to="opacity-0 scale-95"
  >
    <%= button_to "Sign out", session_path, class: "edit block px-5 py-2 hover:bg-gray-100 w-full", method: :delete %>
  </div>
</div>
